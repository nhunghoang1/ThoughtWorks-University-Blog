<%= form_with model: @post, local: true do |form| %>
  <% if @post.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@post.errors.count, "error") %>
				prohibited this post from being saved:
			</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
		
	<h2>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</h2>
	<p>
		<%= form.label :body %><br>
		<%= form.text_area :body %>
	</p>
	<p>
		<%= form.submit %>
	</p>
<% end %>